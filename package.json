{
  "name": "taskify",
  "version": "0.1.0",
  "author": "Demo",
  "description": "A kanban board app built using React.js",
  "main": "public/electron.js",
  "homepage": "./",
  "productName": "Taskify",
  "license": "UNLICENSED",
  "scripts": {
    "start": "cross-env BROWSER=none PORT=4321 craco start",
    "postinstall": "electron-builder install-app-deps",
    "build": "rimraf dist && rimraf build && craco build",
    "electron:start": "electron .",
    "buildwin": "npm run build && electron-builder build --win --x64",
    "buildmac": "npm run build && electron-builder -m",
    "test": "craco test",
    "eject": "craco eject",
    "publish": "electron-builder -p always"
  },
  "build": {
    "asar": true,
    "extends": null,
    "productName": "Taskify",
    "appId": "com.demo.us",
    "copyright": "Â© 2022 Taskify",
    "files": [
      "./build/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 200,
          "type": "file"
        }
      ]
    },
    "mac": {
      "extendInfo": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      },
      "icon": "public/logo6.png",
      "hardenedRuntime": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/logo6.png",
      "verifyUpdateCodeSignature": false,
      "publisherName": "Clouwood"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "icon": "public"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "@fortawesome/fontawesome-free": "^6.1.1",
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-regular-svg-icons": "^6.1.0",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "@mui/icons-material": "^5.5.1",
    "@mui/material": "^5.5.2",
    "babel-plugin-macros": "^3.1.0",
    "cors": "^2.8.5",
    "electron-is-dev": "2.0.0",
    "electron-log": "^4.4.6",
    "electron-updater": "^4.6.5",
    "express": "^4.17.1",
    "firebase": "^9.6.8",
    "kanban-board-from-react-trello": "^2.4.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-fontawesome": "^1.7.1",
    "react-google-login": "^5.2.2",
    "react-icons": "^4.3.1",
    "react-router-dom": "^6.2.2",
    "react-scripts": "4.0.3",
    "react-search-box": "^2.2.1",
    "react-sidebar": "^3.0.2",
    "react-trello": "^2.2.11",
    "scss": "^0.2.4",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@craco/craco": "^6.1.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "cross-env": "^7.0.3",
    "electron": "^12.0.5",
    "electron-builder": "^22.10.5",
    "electron-packager": "^15.4.0",
    "electron-rebuild": "^2.3.5",
    "react-error-overlay": "^6.0.9",
    "typescript": "^4.1.2"
  }
}
